@model Tearcher_Hoang.Models.SanPham
<h1>Add Product</h1>
<form method="post">
    <div class="mt-3">
        <label class="col-form-label">ID</label>
        <input type="text" class="form-control" asp-for="ID" />
    </div>
    <div class="mt-3">
        <label class="col-form-label">Tên</label>
        <input type="text" class="form-control" asp-for="Ten" />
    </div>

@{
}
@model Tearcher_Hoang.Models.SanPham

<h1>Delete Product</h1>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ID)
        </dd>
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-2">
            Giá Tiền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GiaTien)
        </dd>
        <dt class="col-sm-2">
            Trạng Thái
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
        <dt class="col-sm-2">
            ID Nhà Sản Xuất
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IDNhaSanXuat)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>
